@model SAOnlineMart.Models.OrderItem

@{
    ViewData["Title"] = "Order Item Details";
}

<h1>Order Item Details</h1>

<div>
    <h4>Order Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderID</dd>
        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.ProductID</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
    </dl>
    <a class="btn btn-secondary" asp-controller="AdminOrderItems" asp-action="Index">Back to List</a>
</div>
