@model List<SAOnlineMart.Models.Product>

@{
    ViewBag.Title = "Checkout";
}

<h2>Checkout</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="PlaceOrder" asp-controller="BuyerProducts" method="post">
    <button type="submit" class="btn btn-success">Place Order</button>
</form>
