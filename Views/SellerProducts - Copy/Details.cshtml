@model SAOnlineMart.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Stock Quantity</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>
        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.ImageURL</dd>
    </dl>
    <a class="btn btn-primary" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a>
    <a class="btn btn-secondary" asp-controller="AdminProducts" asp-action="Index">Back to List</a>
</div>
